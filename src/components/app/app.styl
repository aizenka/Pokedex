body {
  background: url(../../img/background-pokemon.png);
  background-size: 100%;
  font-family: Questrial, sans-serif;
  font-size: 17px;
}

sizes() {
  width: 70%;
  height: auto;
}

marg() {
  margin: 0px 30px 30px;
}

.filter {
  display: flex;
  margin: 0px auto 30px auto;
  padding: 20px 0;
  sizes();
  justify-content: center;
  flex-wrap: wrap;
  background-color: #d40000;
}

.main-menu {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  margin: 0 auto;
  sizes();
}

.App {
  max-width: 1200px;
  margin: 0px auto;
}

@media (max-width: 1200px) {
  .App {
    max-width: 970px;
  }
}

@media (max-width: 992px) {
  .App {
    max-width: 750px;
  }
  .main-menu {
    .pokemon-list {
      marg();
    }
  }
}

@media (max-width: 764px) {
  .App {
    max-width: none;
  }
  .filter {
    .filter-panel {
      margin-bottom: 10px;
    }
  }
  .main-menu {
    .pokemon-list {
      marg();
    }
  }
}
